@using FreshMVC.Models
@model PaymentModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta property="og:title" content="Hotmall" />
    <meta property="og:description" content="" />
    <meta property="og:type" content="website">

    <title>HotMall</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/HotMall/css/style.css">
    <link rel="stylesheet" href="~/HotMall/css/product.css">

    <!-- Sweet Alert 2 -->
    <script src="~/Lucid/assets/vendor/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="~/Lucid/assets/vendor/sweetalert2/dist/sweetalert2.min.css">
</head>
<body>
    <form name="frmPayment" method="post" action="@Model.PaymentUrl" style="display:block">
        <input type="text" name="mchid" value="@Model.MerchantCode">
        <input type="text" name="out_trade_no" value="@Model.RefNo">
        <input type="text" name="money" value="@Model.Amount">
        <input type="text" name="bankname" value="@Model.BankName">
        <input type="text" name="accountname" value="@Model.AccountName">
        <input type="text" name="cardnumber" value="@Model.CardNo">
        <input type="text" name="subbranch" value="@Model.SubBranch">
        <input type="text" name="notifyurl" value="@Model.NotifyUrl">
        <input type="text" name="province" value="@Model.Province">
        <input type="text" name="city" value="@Model.City">
        <input type="text" name="pay_md5sign" value="@Model.PayMd5">
        <input type="submit" value="Submit" style="width:100px; height:100px" id="btnSubmit" />
    </form>

    <script src="~/HotMall/js/main.js" type="text/javascript"></script>
    <script src="~/HotMall/js/product.js"></script>
    <script src="~/HotMall/js/customAjax.js"></script>
    @*<script>
        $('#btnSubmit').click();
    </script>*@
</body>
</html>
