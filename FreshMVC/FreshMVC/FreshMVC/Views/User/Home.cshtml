<!DOCTYPE html>
@using resSharedPB = FreshMVC.Resources.PackBuddyShared;
@using FreshMVC.Models
@model MemberHomeModel
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage - HotMall</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/HotMall/img/logosmall.png" sizes="180x180">
    <link rel="icon" href="~/HotMall/img/logosmall.png" sizes="32x32" type="image/png">
    <link rel="icon" href="~/HotMall/img/logosmall.png" sizes="16x16" type="image/png">

</head>

<body>
    @Html.Partial("HeaderMenu")
    <main>
        <!-- Full Baner -->
        <section class="section-wrap">
            <div class="container-fluid">
                <div id="homepage-carousel" class="width-100 banner-slider">
                    @foreach (var banner in Model.BannerList)
                    {
                        <div class="homepage-cell center-block">
                            <picture style="width:100%; height: 100%;">
                                <source media="(min-width:768px)" srcset="~/@banner.ProtraitPhotoPath">
                                <img src="~/@banner.ProtraitPhotoPath" alt="HotMall BANNER"
                                     style="width:100%; max-height: 600px; object-fit: contain;">
                            </picture>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- Search Bar -->
        <section class="section-wrap">
            <div class="mb-lg-5 mb-4 center-block">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <form class="width-100 center my-lg-5 my-4" action="">
                                <div class="input-custom max-width-800">
                                    <input class="width-100 " type="text" name="search" id="search"
                                           placeholder="Search">
                                    <button class="search-button" type="submit">
                                        <i class="bi bi-search text-grey search-icon"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="main-heading text-center ">
                                @resSharedPB.lblWelcomeBack
                            </h1>
                            <h2 class="second-hrading text-center ">
                                @resSharedPB.lblQualityGuarantee
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="width-100 width-90-m ">
                    <section class="section-wrap ">
                        <div class="section-inner-wrapper center-block">
                            <div class="width-100 width-90-m ">
                                <div class="pos-rel middle center-block">
                                    <div id="challenge-carousel" class="width-100">
                                        @foreach (var product in Model.TopProductList)
                                        {
                                            <div class="challenge-cell overflow-hide border-25 border-dark-s text-left">
                                                <a href="/User/ProductDescription?ID=@product.id" class="no-decoration">
                                                    <div class="challenge-cell-text">
                                                        <div class="description">
                                                            @product.Desc
                                                        </div>
                                                        <div class="price">
                                                            @product.Price
                                                        </div>
                                                    </div>
                                                    <div class="challenge-cell-img">
                                                        <img src="~/@product.ImagePath" alt="" class="" style="width:500px">
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                    <svg class="outside-right-nav" width="28" height="110" viewBox="0 0 70 220"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M 0 0 L 36 20 C 51 30 60 50 60 60 L 60 140 C 60 150 51 170 36 180 L 0 200 L 0 0 Z"
                                              fill="#F60000" stroke="white" stroke-width="3"></path>
                                    </svg>
                                    <svg class="outside-left-nav" width="28" height="110" viewBox="-10 0 70 220"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M 60 0 L 24 20 C 9 30 0 50 0 60 L 0 140 C 0 150 9 170 24 180 L 60 200 L 60 0 Z"
                                              fill="#F60000" stroke="white" stroke-width="3"></path>
                                    </svg>
                                </div>
                            </div>

                        </div>

                    </section>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 mx-auto">
                            <div class="width-60 width-100-m center-block mx-auto">
                                <a href="./ProductListing"
                                   class="btn-primary  width-100 border-8 text-bold text-center">
                                    @resSharedPB.lblViewAll
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="bg-primary pt-3 px-lg-2 px-2">
                <div class="container-fluid">
                    <div class="row ">
                        @foreach (var product in Model.ActiveProductList)
                        {
                            <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-lg-3 mb-2 p-1 mx-auto">
                                <div class="mall-product border-12 border-grey overflow-hide daily w-100">
                                    <div class="mall-product-img-p border-bottom">
                                        <!--If Possible image neeed to be square size all the time-->
                                        <div class="product-card-img ">
                                            <a href="./ProductDescription?ID=@product.id" class="carousel__slide">
                                                <figure>
                                                    <div>
                                                        <img src="~/@product.ImagePath" alt="">
                                                    </div>
                                                </figure>
                                            </a>
                                        </div>
                                        @switch (@product.Other)
                                        {
                                            case "SOLD":
                                                <div class="promo-top label-sold">Sold</div>
                                                <div class="out-of-stock middle center">
                                                    <div class="no-stock-text">@resSharedPB.lblOutOfStock</div>
                                                </div>
                                                break;
                                            case "DEAL":
                                                <div class="promo-top label-deal">@resSharedPB.lblDeal</div>
                                                break;
                                            case "NEW":
                                                <div class="promo-top label-new">@resSharedPB.lblNew</div>
                                                break;
                                        }
                                    </div>
                                    <div class="product-card-padding">
                                        <div class="name mall-product-name">
                                            <a href="./ProductDescription?ID=@product.id"
                                               class="mb-0 pb-0">
                                                @product.Title
                                            </a>
                                        </div>
                                        <div class="mall-product-excerpt mrgn-btm-xs text-grey">@product.Title</div>
                                        <div class="display-flex mt-4">
                                            <div class="width-100">
                                                <div class="mall-product-price mb-1">
                                                    <span class="currency">₹</span><span class="price">@product.Price</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="date display-none">13/08/2022</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
        <a href="@ViewBag.SupportURL" target="_blank">
            <input class="clock-dummy-btn" type="image" src="~/HotMall/img/customerservice.png" style="width:60px; background-color:white; padding:0px;" />
        </a>
    </main>

    @Html.Partial("FooterMenu")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/HotMall/flickity/flickity.css">
    <script src="~/HotMall/flickity/flickity.pkgd.min.js"></script>
    <script src="~/HotMall/main.js" type="text/javascript"></script>
    <script>
        $(window).on("load", function (e) {
            $("#loader-wrapper").fadeOut("fast");
        })

        // Flickity Slider
        $('#homepage-carousel').flickity({
            // options
            cellAlign: 'left',
            contain: true,
            prevNextButtons: false,
            imagesLoaded: true,
            autoplay: true,
        })
        $('#challenge-carousel').flickity({
            // options
            cellAlign: 'center',
            wrapAround: true,
            contain: true,
            pageDots: false,
            draggable: false,
            imagesLoaded: true,
            arrowShape: 'M 0,50 L 80,00 L 80,100 Z'
        })
        $('.special-promotion-carousel').flickity({
            // options
            cellAlign: 'left',
            contain: true,
            pageDots: false,
            prevNextButtons: false
        })
    </script>
</body>

</html>