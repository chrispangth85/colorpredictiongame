            //        marker = new google.maps.Marker({
            //            position: clickedLocation,
            //            map: placePickerMap,
            //            draggable: true
            //        });
            //        google.maps.event.addListener(marker, 'dragend', function(event){
            //            markerLocation(true);
            //        });
            //    } else{
            //        marker.setPosition(clickedLocation);
            //    }
            //    markerLocation(true);
            //});
        }

        function callbackFromCurrentLocationInit(defaultLat, defaultLng, geocoder, zoomGM) {
            var options = {
                componentRestrictions: { country: "my" },//KH Set the autocomplete country restriction
                fields: ["address_components", "geometry", "icon", "name"],
                origin: { lat: defaultLat, lng: defaultLng },
                strictBounds: true,
                //types: ["establishment"],//KH to be able to search for place  [establishment/geocode/address] Dont set will get even more better result. Else setting Establishment, some more detailed search no result one
            };

            initz(geocoder, zoomGM, defaultLat, defaultLng);

            var input = document.getElementById('TemporaryClientAddress');
            var autocomplete = new google.maps.places.Autocomplete(input, options);

            google.maps.event.addListener(autocomplete, 'place_changed', function () {
                //gather address + Lat + Lng

                var place = autocomplete.getPlace();
                //console.log(place);

                var address = place.address_components;
                var zipcode = address[address.length - 1].long_name;
                var city = address[address.length - 4].long_name;

                document.getElementById('TemporaryLat').value = place.geometry.location.lat();
                document.getElementById('TemporaryLng').value = place.geometry.location.lng();
                document.getElementById('TemporaryPostalCode').value = zipcode;
                document.getElementById('TemporaryCity').value = city;

                initz(geocoder, zoomGM, place.geometry.location.lat(), place.geometry.location.lng());
            });
        }

        google.maps.event.addDomListener(window, 'load', function () {

            var zoomGM = 17;
            var geocoder = new google.maps.Geocoder;

            var defaultLat = 3.15916;
            var defaultLng = 101.71366;

            // Try HTML5 geolocation.
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    defaultLat = position.coords.latitude;
                    defaultLng = position.coords.longitude;

                    callbackFromCurrentLocationInit(defaultLat, defaultLng, geocoder, zoomGM);
                }, function () {
                    //handleLocationError(true, infoWindow, map.getCenter());
                    callbackFromCurrentLocationInit(defaultLat, defaultLng, geocoder, zoomGM);
                });
            } else {
                // Browser doesn't support Geolocation
                console.log('Unable to retrieve location')
                callbackFromCurrentLocationInit(defaultLat, defaultLng, geocoder, zoomGM);
            }
        });

