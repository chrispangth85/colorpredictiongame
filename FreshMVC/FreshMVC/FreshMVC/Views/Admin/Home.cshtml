    <script type="text/javascript">

        function initz(geocoder, zoomGM, lat, lng) {
            mapOptions = {
                center: { lat: lat, lng: lng },
                zoom: zoomGM,
                minZoom: 15,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            map = new google.maps.Map(document.getElementById("googlemapDiv"), mapOptions);

            marker = new google.maps.Marker({
                position: new google.maps.LatLng(lat, lng),
                map: map
            });

            marker.setDraggable(true);
            google.maps.event.addListener(marker, 'dragend', function (event) {
                var currentLocation = marker.getPosition();
                geocoder.geocode({ 'location': currentLocation }, function (results, status) {
                    if (status === 'OK') {
                        if (results[0]) {
                            //gather address + Lat + Lng
                            result = results[0];
                            //console.log(result);
                            var address = result.address_components;
                            var zipcode = address[address.length - 1].long_name;
                            var city = address[address.length - 4].long_name;
                            console.log(result.geometry.location.lat());
                            console.log(result.geometry.location.lng());
                            document.getElementById('TemporaryClientAddress').value = result.formatted_address;
                            document.getElementById('TemporaryLat').value = result.geometry.location.lat();
                            document.getElementById('TemporaryLng').value = result.geometry.location.lng();
                            document.getElementById('TemporaryPostalCode').value = zipcode;
                            document.getElementById('TemporaryCity').value = city;
                        }
                    }
                });
            });

            //This is from placepicker.js. Click on it to get the location. Free time only implement this
            //google.maps.event.addListener(placePickerMap, 'click', function(event) {
            //    var clickedLocation = event.latLng;
