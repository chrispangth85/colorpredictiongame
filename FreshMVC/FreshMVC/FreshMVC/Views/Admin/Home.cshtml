                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-primary d-block w-100" data-bs-dismiss="modal" id="btnGoogleAddressSave">Set Address</button>
                </div>
                <div class="modal-body" style="padding-top:0px; padding-bottom:0px;">
                    <div class="form-floating mb-3">
                        @Html.TextAreaFor(m => Model.TemporaryClientAddress, new { @class = "form-control", @Placeholder = "Your Delivery Address", @style = "height:135px;", autocomplete = "off" })
                        <label class="form-control-label">Your Address</label>
